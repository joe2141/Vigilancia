<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFinalizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ha terminado su vigilancia"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tomar foto"
        app:layout_constraintTop_toBottomOf="@id/tvFinalizado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnVerFotos"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btnVerFotos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver fotos"
        app:layout_constraintTop_toBottomOf="@id/tvFinalizado"
        app:layout_constraintStart_toEndOf="@id/btnTomarFoto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/btnTerminarVigilancia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terminar vigilancia"
        app:layout_constraintTop_toBottomOf="@id/btnTomarFoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
